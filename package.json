{
  "name": "@n1xyz/nord-ts",
  "version": "0.0.20",
  "description": "Typescript for Nord",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
      "dist/",
      "src/",
      "package.json",
      "README.md"
  ],
  "scripts": {
    "gen:proto": "nix run ..#nord-ts-proto ../engine/nord.proto src/gen/",
    "gen:api": "nix run ..#nord-openapi | bunx openapi-typescript > src/gen/openapi.ts",
    "gen": "bun run gen:proto && bun run gen:api",
    "build": "bun run gen && bunx tsc && bun run docs",
    "docs": "bunx typedoc --out ./docs ./src",
    "compile": "tsc",
    "clean": "rm -rf ./src/gen ./dist ./docs",
    "fmt": "prettier --write src tests",
    "ci": "bunx eslint && prettier --check src tests"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/google-protobuf": "^3.15.10",
    "@types/node": "^22.15.29",
    "@types/node-fetch": "^2.6.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.9",
    "typescript": "*"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.0.0",
    "@n1xyz/proton": "workspace:*",
    "@noble/curves": "^1.3.0",
    "@noble/ed25519": "^2.2.3",
    "@noble/hashes": "^1.3.2",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.2",
    "bs58": "^6.0.0",
    "decimal.js": "^10.4.3",
    "ethers": "^6.11.1",
    "node-fetch": "2.6.13",
    "openapi-fetch": "^0.14.0",
    "tweetnacl": "^1.0.3",
    "ws": "^8.16.0"
  }
}
